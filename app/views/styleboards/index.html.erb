<h1>Listing styleboards</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Place</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @styleboards.each do |styleboard| %>
      <tr>
        <td><%= styleboard.description %></td>
        <td><%= styleboard.image %></td>
        <td><%= styleboard.place %></td>
        <td><%= styleboard.name %></td>
        <td><%= link_to 'Show', styleboard %></td>
        <td><%= link_to 'Edit', edit_styleboard_path(styleboard) %></td>
        <td><%= link_to 'Destroy', styleboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

